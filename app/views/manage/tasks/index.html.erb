<% @title ||= Task.model_name.human; title @title %>

<div class="row mb-5">
  <div class="col-12">
    <%= link_to mturk_batch_jobs_path, class: 'btn btn-secondary btn-lg' do %>
      Go back
    <% end %>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <h2 class='mb-4'>
      Tasks for batch '<%= @mturk_batch_job.name %>'
    </h2>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <table class="table">
      <thead>
        <tr>
          <th>HIT Id</th>
          <th>Tweet Id</th>
          <th>Worker Id</th>
          <th>Time assigned</th>
          <th>Time submitted</th>
          <th>Time completed</th>
          <th>Lifecycle status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @tasks %>
      </tbody>
    </table>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <%= paginate @tasks %>
  </div>
</div>


<% unless @mturk_batch_job.is_submitted? %>
  <div class="row justify-content-center mb-4">
    <div class="col-12">
      <%= link_to 'Submit HITs', mturk_batch_job_submit_path, class: 'btn btn-warning btn-lg' %>
    </div>
  </div>
<% end %>
