<% @title ||= Task.model_name.human; title @title %>

<div class="row mb-5">
  <div class="col-12">
    <%= link_to mturk_batch_jobs_path, class: 'btn btn-secondary btn-lg' do %>
      Go back
    <% end %>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <h2 class='mb-4'>
      <% if @mturk_batch_job %>
        Tasks for <%= @mturk_batch_job.name %>
      <% else %>
        All tasks
      <% end %>
    </h2>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <%= paginate @tasks %>
    <table class="table">
      <thead>
        <tr>
          <th>Tweet Id</th>
          <th>HIT Id</th>
          <th>Assignment Id</th>
          <th>Worker Id</th>
          <th>Lifecycle status</th>
          <th>Time submitted</th>
          <th>Time submitted</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @tasks %>
      </tbody>
    </table>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <%= link_to 'Submit tasks', mturk_batch_job_submit_path, class: 'btn btn-warning btn-lg' %>
  </div>
</div>
