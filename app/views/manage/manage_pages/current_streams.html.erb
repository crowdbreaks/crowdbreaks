<% @title ||= 'Current streams'; title @title %>

<div class="content-no-banner">
  <div class="row">
    <div class="col-xs-12">
      <%= link_to streaming_path, class: 'btn btn-default' do %>
        <i class="glyphicon glyphicon-chevron-left"></i>
        Go back
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <h3>Current streaming configuration</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Project slug</th>
            <th>ES index name</th>
            <th>Keywords</th>
            <th>Languages</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "current_stream", collection: @current_streams, as: 'stream' %>
        </tbody>
      </table>
    </div>
  </div>
</div>
