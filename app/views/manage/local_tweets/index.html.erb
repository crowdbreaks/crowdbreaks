<% @title ||= 'Queued Tweets'; title @title %>

<div class="row mb-5">
  <div class="col-12">
    <%= link_to manage_local_batch_jobs_path, class: 'btn btn-secondary btn-lg' do %>
      Go back
    <% end %>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <h2 class='mb-4'>
      In queue for '<%= @local_batch_job.name %>'
    </h2>
  </div>
</div>


<div class="row justify-content-center mb-4">
  <div class="col-12">
    <%= paginate @local_tweets %>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <table class="table">
      <thead>
        <tr>
          <th>Tweet ID</th>
          <th>Available?</th>
          <th>Done by</th>
        </tr>
      </thead>
      <tbody>
        <%= render @local_tweets %>
      </tbody>
    </table>
  </div>
</div>
