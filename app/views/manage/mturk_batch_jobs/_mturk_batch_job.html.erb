<tr>
  <td><%= mturk_batch_job.name %></td>
  <td><%= mturk_batch_job.sandbox ? 'Sandbox' : 'Production' %></td>
  <td><%= mturk_batch_job.tasks.count %></td>
  <td><%= mturk_batch_job.created_at %></td>

  <td>
    <%= link_to manage_mturk_batch_job_tasks_path(mturk_batch_job.id) do %>
      View items
      <i class="glyphicon glyphicon-chevron-right"></i>
    <% end %>
  </td>

  <td>
    <span> 
      <%= link_to fa_icon('trash'),
        manage_mturk_batch_job_path(mturk_batch_job.id),
        method: :delete,
        data: {confirm: "Delete batch and all its tasks?"} 
      %>
      <%# <%= link_to fa_icon('pencil'), edit_manage_mturk_batch_job_path(mturk_batch_job.id)  %>
    </span>
  </td>
</tr>
