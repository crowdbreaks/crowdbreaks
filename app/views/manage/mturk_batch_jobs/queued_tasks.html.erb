<% @title ||= 'Queued tasks'; title @title %>

<div class="row mb-5">
  <div class="col-12">
    <%= link_to mturk_batch_jobs_path, class: 'btn btn-secondary btn-lg' do %>
      Go back
    <% end %>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <h2 class='mb-4'>
      In queue for '<%= @mturk_batch_job.name %>'
    </h2>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <table class="table">
      <thead>
        <tr>
          <th>Tweet Id</th>
          <th>Num workers</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'queued_task', collection: @queued_tasks %>
      </tbody>
    </table>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <%= paginate @queued_tasks %>
  </div>
</div>
