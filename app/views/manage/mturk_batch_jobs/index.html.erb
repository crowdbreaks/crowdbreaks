<% @title ||= MturkBatchJob.model_name.human; title @title %>

<div class="row mb-5">
  <div class="col-12">
    <%= link_to dashboard_path, class: 'btn btn-secondary btn-lg' do %>
      Go back
    <% end %>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <h2 class='mb-4'><%= @title.pluralize %></h2>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <%= paginate @mturk_batch_jobs %>
    <table class="table">
      <thead>
        <tr>
          <th>Batch name</th>
          <th>Project</th>
          <th>Platform</th>
          <th>Created</th>
          <th>Status</th>
          <th>Completed</th>
          <th>Num tasks</th>
          <th>View</th>
          <th>Links</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @mturk_batch_jobs %>
      </tbody>
    </table>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <%= link_to new_mturk_batch_job_path, class: 'btn btn-primary btn-lg' do %>
      Create new batch job
    <% end %>
  </div>
</div>

