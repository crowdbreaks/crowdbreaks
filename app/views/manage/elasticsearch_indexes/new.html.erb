<% @title ||= 'New ES index'; title @title %>
<div class="row mb-4">
  <div class="col-12">
    <%= link_to elasticsearch_indexes_path, class: 'btn btn-secondary btn-lg' do %>
      Go back
    <% end %>
  </div>
</div>
<div class="row justify-content-center mb-4">
  <div class="col-12 col-md-8 col-lg-6">
    <h2 class='mb-4'>Create new Elasticsearch index</h2>
    <%= simple_form_for :elasticsearch_index, url: elasticsearch_indexes_path do |f| %>
      <div class="form-group">
        <%= f.input :name, as: :string, hint: "Start name with project_* in order to use the Elasticsearch project template." %>
      </div>
      <div class="form-actions" style="margin-top:25px;">
        <%= f.button :submit, class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
  </div>
</div>
