<% @title ||= 'Local batch processing'; title @title %>
<%= go_back_btn dashboard_path %>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <h2 class='mb-4'><%= @title %></h2>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <%= paginate @local_batch_jobs %>
    <table class="table">
      <thead>
        <tr>
          <th>Batch name</th>
          <th>Project</th>
          <th>Created</th>
          <th>Status</th>
          <th>Progress</th>
          <th>Participants</th>
          <th>Batch size</th>
          <th>Mode</th>
          <th>View</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @local_batch_jobs %>
      </tbody>
    </table>
  </div>
</div>

<% if can? :create, LocalBatchJob %>
  <div class="row justify-content-center mb-4">
    <div class="col-12">
      <%= link_to new_manage_local_batch_job_path, class: 'btn btn-primary btn-lg' do %>
        Create new batch job
      <% end %>
    </div>
  </div>
<% end %>
