<div class="row justify-content-center">
  <div class="col-12 col-sm-10 col-lg-6 text-center">
    <h1 class="mb-4"><%= t('.change_your_password') %></h1>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-12 col-sm-10 col-lg-5">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <div class="form-group">
          <%= f.input :password, label: t('.new_password'), required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>
        <div class="form-group">
          <%= f.input :password_confirmation, label: t('.confirm_new_password'), required: true %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('.change_my_password'), class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    <% end %>
  </div>
</div>
