<% @title ||= t('.sign_in_title'); title @title %>

<div class="row justify-content-center">
  <div class="col-12 col-sm-10 col-lg-6 text-center">
    <h1 class="mb-5"><%= t('.sign_in_title') %></h1>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-12 col-sm-10 col-lg-5">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "control-label" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit t('.sign_in'), class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
