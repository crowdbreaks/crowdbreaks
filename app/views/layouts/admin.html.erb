<!DOCTYPE html>
<html>
  <head>
    <meta content="width=device-width,initial-scale=1" name=viewport>
    <meta charset="utf-8">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta property="og:title" content="">
    <meta property="og:type" content="website">
    <meta property="og:description" content="">
    <title><%= content_for(:title) || 'Crowdbreaks' %></title>
    <%= render 'application/favicon' %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
    <%= action_cable_meta_tag %>
    <% if user_signed_in? %>
      <%= tag :meta, name: "user-signed-in" %>
    <% end %>
  </head>

  <body class="<%= content_for :body_class %>" <%= content_for :disable_turbolinks %>>
    <%= render 'layouts/shared/navbar' %>
    <%= render 'layouts/shared/toastr_notifications' %>
    <div class="admin-wrapper">
      <div class="container-fluid">
        <div class="row">
          <%= render 'layouts/admin/admin_navbar' %>
          <div class="col-12 col-xl-10 admin-content">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <%= render 'layouts/shared/footer' %>
  </body>
</html>
