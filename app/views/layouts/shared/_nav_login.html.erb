
<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <% if user_signed_in? %>
      <%= t 'navbar.account.account_label' %>
    <% else %>
      <%= t 'navbar.account.login' %>
    <% end %>
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu" role="menu">
    <% if user_signed_in? %>
      <li class=logged-in-as>
        <%= t 'navbar.account.logged_in_html' %>
        <% if current_user.username? %>
          <strong><%= current_user.username %></strong>
        <% else %>
          <strong><%= current_user.email %></strong>
        <% end %>
      </li>
      <li> <%= link_to t('navbar.account.edit'), edit_user_registration_path %> </li>
      <li>
        <%= link_to t('navbar.account.logout_label'), destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to t('navbar.account.login'), new_user_session_path  %>
      </li>
      <li>
        <%= link_to t('navbar.account.sign_up_label'), new_user_registration_path %>
      </li>
    <% end %>
  </ul>
</li>
