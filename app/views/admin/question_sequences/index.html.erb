<% @title ||= 'Question Sequences'; title @title %>
<div class="row justify-content-center mb-4">
  <div class="col-12">
    <h2 class='mb-4'>Question Sequences</h2>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <%= paginate @projects %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-12">
    <table class="table">
      <thead>
        <tr>
          <th>Project name</th>
          <th>Title</th>
          <th>QS name</th>
          <th># Questions</th>
          <th># Results</th>
          <th>View</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "question_sequence", collection: @projects, as: 'primary_question_sequence' %>
      </tbody>
    </table>
  </div>
</div>

<% if can? :create, Project %>
  <div class="row justify-content-center mb-4">
    <div class="col-12">
      <%= link_to 'New Question Sequence', new_admin_question_sequence_path, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
