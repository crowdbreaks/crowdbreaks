<tr>
  <td><%= user.username %></td>
  <td><%= user.email %></td>
  <td><%= role_badge(user.role) %></td>
  <td><%= user.confirmed? %></td>
  <td>
    <span> 
      <% if can? :destroy, user %>
        <%= link_to fa_icon('trash'),
          admin_user_path(user),
          method: :delete,
          data: {confirm: "Are you sure you want to delete this user?"} %>
      <% end %>
      <% if can? :update, user %>
        <%= link_to fa_icon("pencil"), edit_admin_user_path(user.id) %>
      <% end %>
    </span>
  </td>
</tr>
