<tr>
  <td><%= user.username %></td>
  <td><%= user.email %></td>
  <td><%= role_badge(user.role) %></td>
  <td><%= user.locale %></td>
  <td>
    <%= user.confirmed? ? 'Yes' : 'No' %>
  <td>
    <span> 
      <% if can? :destroy, user %>
        <%= link_to fa_icon('trash'),
          admin_user_path(user),
          method: :delete,
          title: 'Delete user',
          data: {confirm: "Are you sure you want to delete this user?"} %>
      <% end %>
      <% if can? :update, user %>
        <%= link_to fa_icon('pencil'), edit_admin_user_path(user.id), title: 'Edit' %>
      <% end %>
      <% if can? :read, user %>
        <%= link_to fa_icon('eye'), admin_user_path(user.id), title: 'Expand' %>
      <% end %>
    </span>
  </td>
</tr>
