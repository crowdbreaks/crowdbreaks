<%= simple_form_for(@user, url: admin_user_path(@user)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :username %>
  </div>

  <div class="form-group">
    <%= f.input :email %>
  </div>

  <div class="form-group">
    <%= f.input :role, collection: User.roles, include_blank: false, selected: @user.read_attribute_before_type_cast(:role) %>
  </div>

  <% unless @user.confirmed? %>
    <div class="form-group">
      <%= f.input :mark_as_confirmed, as: :boolean, input_html: {style: "margin-right:5px", checked: @user.confirmed?} %>
    </div>
  <% end %>

  <div class="form-actions" style="margin-top:25px;">
    <%= f.button :submit, class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
