<div class="row mb-5">
  <div class="col-12">
    <%= link_to admin_dashboard_path, class: 'btn btn-secondary btn-lg' do %>
      Go back
    <% end %>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <%= paginate @users %>
  </div>
</div>

<div class="row justify-content-center mb-4">
  <div class="col-12">
    <h2 class='mb-4'>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>Confirmed?</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
    <%= render @users %>
      </tbody>
    </table>
  </div>
</div>

<% if can? :create, User %>
  <div class="row justify-content-center mb-4">
    <div class="col-12">
      <%= link_to new_admin_user_path, class: 'btn btn-primary btn-lg' do %>
        Create new User
      <% end %>
    </div>
  </div>
<% end %>
