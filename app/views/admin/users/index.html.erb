<div class="row justify-content-center mb-5">
  <div class="col-12">
    <h2 class='mb-5'>Users</h2>
  </div>
  <div class="col-12">
    <%= form_tag admin_users_path, enforce_utf8: false, method: :get, class: 'mb-4' do %>
      <%= text_field_tag :search_user, params[:search_user], class: 'form-control', style: 'width:20%;display:inline;' %>
      <%= submit_tag 'Search', class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="col-12">
    <div class="mb-5">
      <%= paginate @users %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>Locale</th>
          <th>Confirmed?</th>
          <th>Created</th>
          <th>Last sign in</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>
  </div>
</div>

<% if can? :create, User %>
  <div class="row justify-content-center mb-4">
    <div class="col-12">
      <%= link_to new_admin_user_path, class: 'btn btn-primary btn-lg' do %>
        Create new User
      <% end %>
    </div>
  </div>
<% end %>
