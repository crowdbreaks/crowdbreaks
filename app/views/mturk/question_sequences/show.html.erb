<% if @preview_mode %>
  <div class="row">
    <div class="col-xs-12 text-center">
      <h3>You are in preview mode. Please accept the HIT to submit your answers.</h3>
    </div>
  </div>
<% end %>
<%= tag.div nil, 
  class: 'row', 
  id: 'mturk-question-sequence-component', 
  data: {
    questions: @questions,
    initial_question_id: @initial_question_id,
    transitions: @transitions,
    tweet_id: @tweet_id,
    projects_path: projects_path,
    results_path: mturk_question_sequence_url,
    translations: @translations,
    user_id: @user_id,
    project_id: @project.id,
    assignment_id: @assignment_id,
    preview_mode: @preview_mode,
    sandbox: @sandbox,
    final_submit_path: final_mturk_question_sequence_url,
    hit_id: @hit_id
  }
%>
